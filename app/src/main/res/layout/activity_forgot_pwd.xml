            android:layout_marginTop="50dp"
            android:layout_marginLeft="65dp"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="234dp"
            tools:layout_editor_absoluteX="150dp" android:id="@+id/forgotBtn"/>
</RelativeLayout>